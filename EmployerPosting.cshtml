        </div>
        <div class="clear"></div>
        <div class="left">
            <span class="label"><label for="state">State:</label></span>
            <input type="text" name="state" id="state" class="required" />
        </div>
        <div class="clear"></div>
        <div class="left">
            <span class="label"><label for="zip">Zipcode:</label></span>
            <input type="text" name="zip" id="zip" class="required" />
            @*<textarea name="zip" id="zip" class="required"></textarea>*@
        </div>
        <div>
            <span class="label"><label for="intern_duties">Internship Duties:</label></span>
            <textarea name="intern_duties" id="intern_duties" class="goals"></textarea>
        </div>
        <div class="clear"></div>
        <input type="Submit" value="submit">
