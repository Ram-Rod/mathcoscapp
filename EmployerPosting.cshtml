            <label><input type="radio" name="ssuper" class="required" />Yes </label>
            <label><input type="radio" name="ssuper" />No</label>
        </div>
        <div class="clear"></div>
        <div class="left">
            <span class="label"><label for="ephone">Employee's Phone Number:</label></span>
            <input type="text" name="ephone" id="ephone" class="required" />
        </div>
        <div>
            <span class="label"><label for="sname">If no: Supervisors Name:</label></span>
            <input type="text" name="sname" id="sname" />

            <span class="label"><label for="semail">Supervisor's Email:</label></span>
            <input type="text" name="semail" id="semail" />
        </div>
        <div class="clear"></div>
        <div class="left">
            <span class="label"><label for="street_address">Street Address:</label></span>
            <input type="text" name="street_address" id="street_address" class="required" />
